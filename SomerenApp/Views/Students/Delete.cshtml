@model SomerenApp.Models.Student
@{
	ViewData["Title"] = "Delete Student";
}

<h4 class="text-danger">Delete Student</h4>
<form action="/Students/Delete" method="POST">
	<input hidden type="number" name="StudentNumber" value="@Model?.StudentNumber" />

	<div class="form-group py-2">
		<label for="FirstName">First name:</label>
		<input type="text" id="FirstName" name="FirstName" class="form-control borderColor" value="@Model?.FirstName" readonly />
	</div>

	<div class="form-group py-2">
		<label for="LastName">Last name:</label>
		<input type="text" id="LastName" name="LastName" class="form-control borderColor" value="@Model?.LastName" readonly />
	</div>

	<div class="form-group py-2">
		<label for="TelephoneNumber">Telephone number:</label>
		<input type="text" id="TelephoneNumber" name="TelephoneNumber" class="form-control borderColor" value="@Model?.TelephoneNumber" readonly />
	</div>

	<div class="form-group py-2">
		<label for="ClassName">Class:</label>
		<input type="text" id="ClassName" name="ClassName" class="form-control borderColor" value="@Model?.ClassName" readonly />
	</div>

	<button type="submit" class="btn btn-danger my-2">Delete</button>
</form>

<a href="/Students/Index" class="link-danger">Back to list</a>


<style>
	.borderColor {
		border: 1.5px solid #ff8a8a
	}
</style>