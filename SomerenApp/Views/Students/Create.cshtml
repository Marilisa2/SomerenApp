@model SomerenApp.Models.Student
@{
	ViewData["Title"] = "Create Student";
}

<h4 class="text-primary">New Student</h4>
<form action="/Students/Create" method="POST">
	
	<div class="form-group py-2">
		<label for="FirstName">First name:</label>
		<input type="text" id="FirstName" name="FirstName" class="form-control borderColor" required value="@Model?.FirstName" />
	</div>

	<div class="form-group py-2">
		<label for="LastName">Last name:</label>
		<input type="text" id="LastName" name="LastName" class="form-control borderColor" required value="@Model?.LastName" />
	</div>
	
	<div class="form-group py-2">
		<label for="TelephoneNumber">Telephone number:</label>
		<input type="text" id="TelephoneNumber" name="TelephoneNumber" class="form-control borderColor" required value="@Model?.TelephoneNumber" />
	</div>
	
	<div class="form-group py-2">
		<label for="ClassName">Class:</label>
		<input type="text" id="ClassName" name="ClassName" class="form-control borderColor" required value="@Model?.ClassName" />
	</div>

	<button type="submit" class="btn btn-primary my-2">Add</button>
</form>

<style>
	.borderColor{
		border: 1.5px solid #A6B7FD
	}
</style>

<a href="/Students/Index">Back to list</a>

