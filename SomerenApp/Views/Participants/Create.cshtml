@model SomerenApp.Models.ActivityParticipantsViewModel

@{
    ViewData["Title"] = "Add Participant";
}

<h4>Adding a Participant</h4>

<div class="text-center">

    <!-- Display an error message when adding a student/participant fails -->
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["ErrorMessage"]
        </div>    
    }

    @if (Model.Student != null)
    {
        <h4>Do you want to add  @Model.Student.FirstName @Model.Student.LastName to the activity '@Model.Activity.ActivityType'?</h4>
    }
    else
    {
        <p>Participant data is missing.</p>
    }

    <form action="/Participants/Create" method="POST">

        <input type="hidden" name="StudentNumber" value="@Model.Participant.StudentNumber" />
        <input type="hidden" name="ActivityNumber" value="@Model.Participant.ActivityNumber" />

        <div class="form-group py-2">
            <label for="StudentNumber">Studentnumber:</label>
            <input type="text" class="form-control" value="@Model.Participant.StudentNumber" readonly />
        </div>

        <div class="form-group py-2">
            <label for="ActivityNumber">Activity:</label>
            <input type="text" class="form-control" value="@Model.Participant.ActivityNumber" readonly />          
        </div>
    
        <button type="submit" class="btn btn-link mt-3 d-block" style="background-color:#585FD6; color: #FFFFFF;">Add Participant</button>
    </form>
</div>

<style>
    body, a {
        font-size: 18px;
    }

    .form-group, h4 {
        text-align: left;
    }

    a, h4 {
        color: #585FD6;
    }

        a:hover {
            color: #000000;
        }

    button {
        background-color: #585FD6;
    }
</style>

<a href="/Participants/Index" class="mt-3 d-block">Back to List</a>
